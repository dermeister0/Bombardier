<RibbonWindow x:Class="Bombardier.Editor.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Bombardier.Editor.Views"
        Title="Bombardier Editor" Height="350" Width="525" Icon="..\Images\Icon32.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Ribbon Grid.Row="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu SmallImageSource="..\Images\Icon16.png">
                    <RibbonApplicationMenuItem Header="New" Command="{Binding FileNewCommand}" />
                    <RibbonApplicationMenuItem Header="Open" />
                    <RibbonApplicationMenuItem Header="Save" />

                    <RibbonApplicationMenu.FooterPaneContent>
                        <DockPanel LastChildFill="False">
                            <RibbonButton Label="Exit" DockPanel.Dock="Right" />
                        </DockPanel>
                    </RibbonApplicationMenu.FooterPaneContent>

                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Brushes">
                <RibbonGroup>
                    <RibbonButton LargeImageSource="..\Images\Clear.png" Label="Clear" />
                </RibbonGroup>

                <RibbonGroup Header="Bricks">
                    <RibbonButton LargeImageSource="..\Images\Bricks00.png" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>

        <ScrollViewer Name="MainScrollViewer" HorizontalScrollBarVisibility="Auto" Grid.Row="1">
            <views:MapView DataContext="{Binding MapVM}" />
        </ScrollViewer>
    </Grid>
</RibbonWindow>
